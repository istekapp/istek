{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Istek",
  "version": "1.0.0",
  "identifier": "com.istek.app",
  "build": {
    "frontendDist": "../.output/public",
    "beforeDevCommand": "npm run build",
    "beforeBuildCommand": "npm run build"
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "run-mcp",
          "cmd": "",
          "args": true
        }
      ]
    }
  },
  "app": {
    "windows": [
      {
        "title": "Istek",
        "width": 1400,
        "height": 900,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "AI-Native Multi-Protocol API Client",
    "longDescription": "Istek is the first AI-native API client. Connect Claude, GPT, or any MCP-compatible AI agent to manage your APIs through natural language. Test HTTP, GraphQL, gRPC, WebSocket, MQTT, and Unix Sockets in one native desktop app. Free, open-source, and privacy-first.",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      }
    },
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installMode": "currentUser",
        "languages": ["English"],
        "displayLanguageSelector": false
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"]
      }
    }
  }
}
